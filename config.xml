<?xml version='1.0' encoding='utf-8'?>
<widget id="com.msap.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bliimo Conference App</name>
    <description>
        Bliimo conference app
    </description>
    <author email="info@bliimo.com" href="http://bliimo.com">
        Bliimo Technologies Inc.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://*" />
    <allow-navigation href="https://*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <icon src="assets/mdpi.png" density="mdpi" />
        <icon src="assets/ldpi.png" density="ldpi" />
        <icon src="assets/hdpi.png" density="hdpi" />
        <icon src="assets/xdpi.png" density="xhdpi" />
        <icon src="assets/xxdpi.png" density="xxhdpi" /> -->
        <preference name="CordovaWebViewEngine" value="CDVUIWebViewEngine" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="CordovaWebViewEngine" value="CDVUIWebViewEngine" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
